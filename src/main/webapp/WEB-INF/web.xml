<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>org.example.servlets.MainServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>org.example.servlets.UserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/userAction</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ArtworkServlet</servlet-name>
    <servlet-class>org.example.servlets.ArtworkServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ArtworkServlet</servlet-name>
    <url-pattern>/artworks</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ArtworkActionServlet</servlet-name>
    <servlet-class>org.example.servlets.ArtworkActionServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ArtworkActionServlet</servlet-name>
    <url-pattern>/artworkAction</url-pattern>
  </servlet-mapping>

</web-app>
